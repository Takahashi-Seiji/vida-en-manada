<div class="animal-card border p-3">
  <h2 class="animal-name">Name: <%= link_to (animal.respond_to?(:name) ? animal.name : 'No Name'), send(path_method, animal), class:'text-decoration-none' %></h2>
  <div class="animal-details">
    <h6>Species: <%= animal.species %></h6>
    <h6>Age: <%= animal.age %></h6>
    <h6>Breed: <%= animal.breed %></h6>
    <h6>Location: <%= animal.respond_to?(:lost_location) ? animal.lost_location : animal.found_location %></h6>
    <h6>Date: <%= animal.respond_to?(:date_lost) ? animal.date_lost : animal.found_date %></h6>
    <h6>Sterilized: <%= animal.sterilized %></h6>
    <h6>Sex: <%= animal.sex %></h6>
    <h6>Size: <%= animal.size %></h6>
    <h6>Color: <%= animal.color %></h6>
    <h6>Description: <%= animal.description %></h6>
    <h6>Reported by: <%= animal.user.first_name %></h6>
  </div>
  <%= image_tag url_for(animal.photo), size: "200x200", class: "animal-photo" if photo_attached?(animal) %>
  <div class="container rounded-lg mt-5 mb-5 map-container">
  <iframe
  class="missing-animal-map"
  loading="lazy"
  allowfullscreen
  src="https://www.google.com/maps/embed/v1/place?key=<%= Rails.application.credentials.dig(:google_maps, :api_key) %>&q=<%= animal.respond_to?(:lost_location) ? animal.lost_location : animal.found_location %>">
</iframe>
</div>
</div>
