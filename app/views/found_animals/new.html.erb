<h1>Report a found animal new</h1>
<%= link_to "Return home", root_path %>

<div class="report-found-animal-form">
  <%= simple_form_for @found_animal do |f| %>
    <%= f.input :species %>
    <%= f.input :age %>
    <%= f.input :breed %>
    <%= f.input :found_location, input_html: { data: { controller: 'location-autocomplete' } } %>
    <%= f.input :found_date, as: :date, start_year: Date.today.year - 5, end_year: Date.today.year %>
    <%= f.input :sterilized %>
    <%= f.input :size, as: :select, collection: ['Small', 'Medium', 'Large'], include_blank: false %>
    <%= f.input :color %>
    <%= f.input :sex, as: :select, collection: ['Male', 'Female'], include_blank: false %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit %>
  <% end %>
</div>
