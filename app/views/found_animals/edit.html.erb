<h1>Edit found animal info</h1>
<%= link_to "Return to show", found_animal_path(@found_animal) %>

<%= simple_form_for @found_animal do |f| %>
  <%= f.input :species %>
  <%= f.input :age %>
  <%= f.input :breed %>
  <%= f.input :found_location %>
  <%= f.input :found_date, as: :date, start_year: Date.today.year - 5, end_year: Date.today.year %>
  <%= f.input :sterilized %>
  <%= f.input :size %>
  <%= f.input :color %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>
